{
  "manifest_version": 2,
  "name": "YTM Aesthetic Display",
  "version": "0.1",
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Open Player"
  }
}
